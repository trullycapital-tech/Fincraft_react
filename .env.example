# Example Environment Configuration

# Copy this file to .env.production and update with your actual values

# Application Environment
NODE_ENV=production
PORT=8001

# Database Configuration
MONGODB_URI=mongodb://admin:your_secure_password@mongodb:27017/fincraft?authSource=admin

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRE=24h

# Domain Configuration
DOMAIN_NAME=msmeloanconsultant.com
CORS_ORIGIN=https://msmeloanconsultant.com,https://www.msmeloanconsultant.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# API Configuration (Set to false for production with real APIs)
DEMO_MODE=true

# CIBIL API Configuration (Production)
CIBIL_API_URL=https://api.cibil.com
CIBIL_API_KEY=your_cibil_api_key
CIBIL_CLIENT_ID=your_cibil_client_id
CIBIL_CLIENT_SECRET=your_cibil_client_secret

# Bank API Configuration (Production)
BANK_API_BASE_URL=https://api.bank-integration.com
BANK_API_KEY=your_bank_api_key

# OCR Configuration
TESSERACT_LANG=eng
OCR_CONFIDENCE_THRESHOLD=60

# Encryption Key (Generate a secure 32+ character key)
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_encryption